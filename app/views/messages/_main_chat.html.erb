<div class="main-header">
  <div class="main-left-header"> 
    <div class="main-header-room">
      <%= @room.name %>
    </div>
  </div>
  <div class="main-raight-header">
    <div class="main-header-chat">
      <%= link_to "チャットを終了する", room_path(@room), method: :delete %>
    </div>
  </div>
</div>

<div class="main-room">
   <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], html: {class: "main-footer"}, local: true do |f|%>
  <div class="footer-message">
    <%= f.text_field :content, class: 'footer-comment', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'footer-btn' %>
<% end %>